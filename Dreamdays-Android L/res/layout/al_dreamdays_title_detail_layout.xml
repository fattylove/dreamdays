<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/notifyBarTextView"
        android:layout_width="fill_parent"
        android:layout_height="25dp" />

    <RelativeLayout
        android:id="@+id/homeTitleLayout"
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <ImageButton
            android:id="@+id/exitImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/al_close" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/editImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/al_edit" />

            <ImageButton
                android:id="@+id/audioImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/al_record" />

            <ImageButton
                android:id="@+id/shareImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/al_share" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>