<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/notifyBarTextView"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="#0091f6" />

    <RelativeLayout
        android:id="@+id/homeTitleLayout"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="#0091f6" >

        <ImageButton
            android:id="@+id/exitImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/al_back" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/exitImageButton"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/edit"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doneTextView"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/doneProgressBar"
            style="@android:style/Widget.Holo.Light.ProgressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>